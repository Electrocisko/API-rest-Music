<%- include('partials/header.ejs') %>

<body class="container">
    <h1>registro usuario</h1>

    <form class="w-50" action="api/session/register" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label" >Name</label>
            <input type="name" class="form-control" id="name"  name="name">
        </div>
        <div class="mb-3">
            <label for="surname" class="form-label" >Surname</label>
            <input type="surname" class="form-control" id="surname"  name="surname">
        </div>
        <div class="mb-3">
            <label for="nick" class="form-label" >Nick</label>
            <input type="nick" class="form-control" id="nick"  name="nick">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label" >Email</label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
        </div>
        <div class="mb-3">
          <label for="password1" class="form-label">Password</label>
          <input type="password" class="form-control" id="password1" name="password">
        </div>
        <div class="mb-3">
            <label for="password2" class="form-label" >Password2</label>
            <input type="password" class="form-control" id="password2"  name="password2">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>